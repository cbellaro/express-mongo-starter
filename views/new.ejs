<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include ('./partials/head.ejs') %>
  </head>
  <body>
      <a href="/"><div class="logo">
          <img class="book" src="https://i.imgur.com/oUVHIvg.png"><h1>Bookly</h1>
      </div></a>
    <nav class="black">
      <%- include ('./partials/nav.ejs') %>
    </nav>
    <div class="post-container">
      <h1>Create a new post</h1>
      <form action="/posts" method="POST">
        <label for="title">Title:</label>
        <input type="text" name="title" required />
        <label for="chapters">Chapters:</label>
        <input type="text" name="chapters" />
        <br>
        <label for="body">Body:</label><br>
        <textarea name="body" value="body" /></textarea>
        <br><br>
        <div class="buttons">
            <input type="submit" class="btn-small yellow darken-2" value="Submit">
      </div>
  </div>
  <footer>
      <nav class="black">
          <a href="/posts">Back to discussions</a>
      </nav>
  </footer>
</body>
</html>
