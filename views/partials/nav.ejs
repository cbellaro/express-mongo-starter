<ul class="right">
  <li><a id="new-post" href="/posts/new">Create a New Post</a></li>
  <% if (currentUser) { %>
  <li>Signed in as <%= currentUser.username %></li>
  <li>
    <form action="/sessions?_method=DELETE" method="POST">
      <input type="submit" id="sign-out" value="Sign Out" class="btn-small black" />
    </form>
  </li>
  <% } else { %>
  <li><a id="sign-up" href="/users/new">Sign Up</a></li>
  <li><a id="sign-in" href="/sessions/new">Sign In</a></li>
  <% } %>
</ul>
