<!DOCTYPE html>
<html>
    <head>
        <%- include ('./partials/head.ejs') %>
    </head>
    <body>
        <a href="/"><div class="logo">
            <img class="book" src="https://i.imgur.com/oUVHIvg.png"><h1>Bookly</h1>
        </div></a>
        <nav class="black">
            <%- include ('./partials/nav.ejs') %>
        </nav>
        <div class="post-container2">
            <h1>Edit your post</h1>
            <form action="/posts/<%=post.id%>?_method=PUT" method="POST">
            <label for="title">Title:</label>
            <input type="text" name="title" style="font-size:2em;" value="<%=post.title%>" />
            <label for="author">Author:</label>
            <input type="text" name="author" style="font-size:2em;" value="<%=post.author%>" />
            <label for="chapters">Chapter:</label>
            <input type="text" name="chapters" style="font-size:2em;" value="<%=post.chapters%>" />
            <label for="body">Body:</label><br>
            <textarea name="body" value="<%=post.body%>" /><%=post.body%></textarea><br><br>
            <div class="buttons">
                <input type="submit" class="btn-small yellow darken-2" value="Submit">
          </div>
      </div>
      <footer>
          <nav class="black">
              <a href="/posts">Back to discussions</a>
          </nav>
      </footer>
    </body>
  </html>
