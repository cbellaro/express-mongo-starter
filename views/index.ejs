<!DOCTYPE html>
<html>
    <head>
        <%- include ('./partials/head.ejs') %>
    </head>
    <body>
        <a href="/"><h1>Bookly</h1></a>
        <nav class="black">
            <%- include ('./partials/nav.ejs') %>
        </nav>
        <div class="posts">
            <ul>
                <% for(let i = 0; i < posts.length; i++){ %>
                    <li><br>
                        <a href="/posts/<%=posts[i].id; %>">
                        <%=posts[i].title; %> </a><br>
                        <%=posts[i].chapters; %>
                        <br><br>
                        <button><a id = "edit" href="/posts/<%=posts[i].id; %>/edit">EDIT</a></button>
                        <form action="/posts/<%=posts[i].id; %>?_method=DELETE" method="POST">
                            <input type="submit" value="DELETE"/>
                        </form>
                    </li>
                <% } %>
            </ul>
        </div>
    </body>
</html>
