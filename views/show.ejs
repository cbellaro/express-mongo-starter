<!DOCTYPE html>
<html>
    <head>
        <%- include ('./partials/head.ejs') %>
    </head>
    <body>
        <a href="/"><div class="logo">
            <img class="book" src="https://i.imgur.com/oUVHIvg.png"><h1>Bookly</h1>
        </div></a>
        <nav class="black">
            <%- include ('./partials/nav.ejs') %>
        </nav>
        <div class="post">
            <h2><%=post.title; %></h2>
            <h4><%=post.chapters; %></h4>
            <%=post.body; %>
            <br><br>
            <button><a id = "edit" href="/posts/<%=post.id; %>/edit">EDIT</a></button>
            <form action="/posts/<%=post.id; %>?_method=DELETE" method="POST">
                <input type="submit" value="DELETE"/>
            </form>
        </div>
        <footer>
            <nav class="black">
                <a href="/posts">Back to discussions</a>
            </nav>
        </footer>
    </body>
</html>
